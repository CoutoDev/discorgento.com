---
interface Props {
  currentPage: number
  disablePrevious?: boolean
  disableNext?: boolean
}

const { currentPage, disableNext, disablePrevious } = Astro.props
---

<div class=`flex justify-between absolute md:top-[50%] flex w-full`>
  {
    <a
      href={`/articles?page=${currentPage - 1}`}
      class={`inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg ${disablePrevious ? 'opacity-50 pointer-events-none': ''}`}
    >
      Previous
    </a>
  }
  {
    <a
      href={`/articles?page=${currentPage + 1}`}
      class={`inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg ${disableNext ? 'opacity-50 pointer-events-none' : ''}`}
    >
      Next
    </a>
  }
</div>
